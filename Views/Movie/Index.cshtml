@model IEnumerable<MovieApp.Models.Movie>
@{
    ViewData["Title"] = "Movies";
}

<h1 class="mb-4">Movies</h1>

<!-- Search Bar -->
<form class="mb-3 d-flex flex-wrap" asp-action="Index" method="get">
    <input type="text" name="search" class="form-control me-2 mb-2 mb-md-0"
        placeholder="Search by title, genre, or director..." value="@(ViewData["Search"] ?? "")" />
    <button type="submit" class="btn btn-primary me-2 mb-2 mb-md-0">
        <i class="fas fa-search me-1"></i>Search
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary mb-2 mb-md-0">Reset</a>
</form>

<!-- Add Movie -->
<a asp-action="Create" class="btn btn-success mb-4">
    <i class="fas fa-plus me-1"></i> Add New Movie
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">No movies found.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <!-- Poster -->
                    <img src="@(!string.IsNullOrEmpty(movie.PosterUrl) ? movie.PosterUrl : "/images/default-poster.jpg")"
                        class="card-img-top movie-poster" alt="@movie.Title" style="height:250px; object-fit:cover;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate-2">@movie.Title</h5>

                        <!-- Genres -->
                        <div class="mb-2">
                            @foreach (var genre in movie.Genre?.Split(',') ?? Array.Empty<string>())
                            {
                                <span class="genre-badge">@genre.Trim()</span>
                            }
                        </div>

                        <p class="card-text mb-2"><strong>Director:</strong> @movie.Director</p>

                        <!-- Rating Stars -->
                        <div class="mb-2 rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas @(i <= movie.Rating ? "fa-star" : "fa-star-half-alt")"></i>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(movie.Description))
                        {
                            <p class="card-text text-truncate-3">@movie.Description</p>
                        }

                        <div class="mt-auto d-grid gap-1">
                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-search me-1"></i>Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}