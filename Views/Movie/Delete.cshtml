@model MovieApp.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<h2 class="text-danger mb-4">Are you sure you want to delete this movie?</h2>

<div class="row g-4">
    <div class="col-md-4 text-center">
        <img src="@(!string.IsNullOrEmpty(Model.PosterUrl) ? Model.PosterUrl : "/images/default-poster.jpg")"
             class="img-fluid rounded shadow-sm mb-3" alt="@Model.Title" />
    </div>
    <div class="col-md-8">
        <h3>@Model.Title</h3>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Director:</strong> @Model.Director</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash me-1"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
        </form>
    </div>
</div>
